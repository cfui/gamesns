<!DOCTYPE html>
<html>
  <head>
    <title>Gamesns</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <div class="col-xs-12">
    <div class="animsition">
      <header>
        <div class="container">
          <div class="row">
            <div class="col-xs-2">
              <h1 class="log">GameSns</h1>
            </div>
　　　　　　　<!-- ユーザーログイン時のヘッダー -->
            <div class="col-xs-10">
              <% if enduser_signed_in? %>
                  <ul>
                    <div class="col-xs-2">
                      <li class="enduser-header-list">
                        <%=link_to '投稿ホーム', new_post_path ,:style=>"color:white;" %></li>
                    </div>
                    <div class="col-xs-2">
                      <li class="enduser-header-list"><%=link_to 'about', home_about_path ,:style=>"color:white;" %></li>
                    </div>
                    <div class="col-xs-2">
                      <li class="enduser-header-list"><%= link_to 'マイページ', enduser_path(current_enduser.id), :style=>"color:white;" %></li>
                    </div>
                    <div class="col-xs-2">
                      <li class="enduser-header-list"><%= link_to 'マイページ編集', edit_enduser_path(current_enduser.id) ,:style=>"color:white;" %></li>
                    </div>
                    <div class="col-xs-2">
                      <li class="enduser-header-list">< <%= link_to 'DM一覧', dm_rooms_path,:style=>"color:white;" %></li>
                    </div>
                    <div class="col-xs-2">
                      <li class="enduser-header-list"><%= link_to 'ログアウト', destroy_enduser_session_path, :style=>"color:white;", method: :delete %></li>
                    </div>

                  </ul>
                  <!-- ハンバーガーメニュー -->
                  <div id="sp-menu">
                    <ul>
                      <li><%=link_to '投稿ホーム', new_post_path ,:style=>"color:white;" %></li>
                      <li><%=link_to 'about', home_about_path ,:style=>"color:white;" %></li>
                      <li><%= link_to 'マイページ', enduser_path(current_enduser.id), :style=>"color:white;" %></li>
                      <li><%= link_to 'マイページ編集', edit_enduser_path(current_enduser.id) ,:style=>"color:white;" %></li>
                      <li><%= link_to 'ログアウト', destroy_enduser_session_path, :style=>"color:white;", method: :delete %></li>
                    </ul>
                  </div>

                  <div id="hm-icon">
                    <a class="menu-trigger" href="#">
                      <span></span>
                      <span></span>
                      <span></span>
                    </a>
                  </div>
                  <!-- ハンバーガーメニュー終了 -->

　　　　　　　　<!-- 管理者のヘッダー -->
              <% elsif admin_signed_in? %>
              <div class="col-xs-8"></div>
                <div class="col-xs-4">
                  <ul>
                    <li class="header-list"><%= link_to "ログアウト", destroy_admin_session_path, :style=>"color:white;", method: :delete %></li>
                  </ul>
                </div>
　　　　　　　　<!-- 非ログイン時のヘッダー -->
              <% else %>
                <div class="col-xs-7"></div>
                  <div class="col-xs-5">
                    <ul class="header-ul">
                      <li class="header-list"><%=link_to 'about', home_about_path ,:style=>"color:white;" %></li>
                      <li class="header-list"><%=link_to 'ログイン', new_enduser_session_path ,:style=>"color:white;" %> </li>
                      <li class="header-list"><%=link_to '新規登録', new_enduser_registration_path ,:style=>"color:white;" %></li>
                    </ul>
                    <!-- 非ログイン時ハンバーガーメニュー -->
                    <div id="sp-menu">
                      <ul>
                        <li><%=link_to 'about', home_about_path ,:style=>"color:white;" %></li>
                        <li><%=link_to 'ログイン', new_enduser_session_path ,:style=>"color:white;" %></li>
                        <li><%=link_to '新規登録', new_enduser_registration_path ,:style=>"color:white;" %></li>
                      </ul>
                    </div>

                    <div id="hm-icon">
                      <a class="menu-trigger" href="#">
                        <span></span>
                        <span></span>
                        <span></span>
                      </a>
                    </div>
                    <!-- 非ログイン時ハンバーガーメニュー終了 -->
                  </div>
              </div>
              <% end %>
            </div>
        </div>
      </div>
      </header>
      <main>
        <%= yield %>
      </main>

      <footer>
        <div class="container">
          <div class="row">
            <div class="col-xs-9"></div>
              <div class="col-xs-3">
                <p>gamesns.inc</p>
              </div>
          </div>
        </div>
      </footer>
    </div>


  </body>
</html>

