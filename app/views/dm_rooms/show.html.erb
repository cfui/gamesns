<% @entries.each do |e| %>
  <%= attachment_image_tag @enduser, :profile_image, :fill, 70, 70, fallback: "no_image.jpg" %>
  <p><%= e.enduser.nickname %></p>
<% end %>


<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.enduser.nickname %>
    <p><%= m.content %></p>
  <% end %>
<% else %>
  <p>メッセージはまだありません</p>
<% end %>


<%= form_for @message do |f| %>
  <%= f.text_field :content, :placeholder => "メッセージを入力してください" , :size => 70%>
  <%= f.hidden_field :dm_room_id, value: @room.id %>
  <%= f.submit "投稿" %>
<% end %>


